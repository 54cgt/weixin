<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cgt_ll_loading_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center" >

    <ProgressBar
        android:id="@+id/cgt_pb_loading_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/cgt_loading_progress_draw"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/cgt_ib_loading_httpError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:src="@drawable/cgt_loading_http_error"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/cgt_ib_loading_dataEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:src="@drawable/cgt_loading_data_none"
        android:visibility="gone" />

    <TextView
        android:id="@+id/cgt_tv_loading_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5.0dip"
        android:text="@string/text_NetProgressDialogMsg" />

</LinearLayout>